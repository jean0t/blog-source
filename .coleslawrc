;;; -*- mode : lisp -*-
(;; Required information
 :author "jean0t"                         ;; to be placed on post pages and in the copyright/CC-BY-SA notice
 :deploy-dir "deploy/"                ;; for Coleslaw's generated HTML to go in
 :domain "/home/jean0t/jean0t-blog/deploy"                           ;; to generate absolute links to the site content. Note: with :cname option of gh-pages, this requires a url scheme, e.g. https://fake.org 
 :routing ((:post           "posts/~a") ;; to determine the URL scheme of content on the site
           (:tag-index      "tag/~a")
           (:month-index    "date/~a")
           (:numeric-index  "~d")
           (:feed           "~a.xml")
           (:tag-feed       "tag/~a.xml")
           (:sitemap        "~a.xml"))
 :title "jean0t Blog" ;; a site title
 :theme "minimal"                        ;; to select one of the themes in "coleslaw/themes/"
 
 ;; Optional information
 :excerpt-sep "<!--more-->"           ;; to set the separator for excerpt in content 
 :feeds ("lisp")
 :plugins ((mathjax)
           (sitemap)
           (static-pages)
	   (git-submodule)
	   (archive)
	   (tags)

           (rsync "-avz" "--delete" "--exclude" ".git/" "--exclude" ".gitignore" "--copy-links")
          )
 :sitenav ((:url "http://github.com/jean0t" :name "Github"))
 :staging-dir "/tmp/coleslaw/"  ;; for Coleslaw to do intermediate work, default: "/tmp/coleslaw"
)
